<div id="update" class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact's Name"
                    name="name"
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Contact's Phone Number"
                    name="number"
                    value="<%= contact.number %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact's Email"
                    name="email"
                    value="<%= contact.email %>"
                    required>
                </div>


                <button class="btn btn-outline-primary" type="submit">
                    <i class="fas fa-edit"></i> Update</button>
                
                <a href="/contact-list" class="btn btn-outline-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

                <button class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i> Delete</button>    

            </form>
        </div>

    </div>
</div>

