<main id="books" class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-12">
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Number</th>
                    <th class="text-center">Email</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                </tr>

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= ContactList[count].name %></td>
                        <td class="text-center"><%= ContactList[count].number %></td>
                        <td class="text-center"><%= ContactList[count].email %></td>
                        <td class="text-center">
                            <a href="/contact-list/update/<%= ContactList[count]._id %>" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-edit"></i> Update</a>
                        </td>
                        <td class="text-center">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>

            </table>
        </div>
    </div>
</main>